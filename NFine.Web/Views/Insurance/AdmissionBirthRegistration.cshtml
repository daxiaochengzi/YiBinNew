        </form>
    </div>
</div>

<script>
    layui.config({
        base: '/Content/js/layui/plugin/'
    }).extend({
        autocomplete: 'layAutoComplete'
        });
    var iniJs;
    var iniMsg;
    layui.use(['form', 'laypage', 'layer', 'table', 'element', 'laydate', 'autocomplete'],
        function () {
            var $ = layui.$,
                element = layui.element,
                form = layui.form,
                layer = layui.layer,
                table = layui.table,
                laydate = layui.laydate;
            //初始化公共页面
            iniJs = $;
            iniMsg = layer;
            //新的插件对象
            var baseInfoNew;
            //用户信息审核
            function userInfoAudit(name, icCard, ybName, ybCard) {
                var resultData = true;
                if (name !== ybName) {
                    layer.alert("基层与医保用户名不一致", { skin: 'layui-layer-molv', icon: 5, title: '错误提示' });
                    resultData = false;
                }
                if (icCard !== ybCard) {
                    layer.alert("基层与医保身份证号不一致", { skin: 'layui-layer-molv', icon: 5, title: '错误提示' });
                    resultData = false;
                }
                return resultData;
            }
            form.render(null, 'LAY-form-render');
            //执行一个laydate实例
            laydate.render({ elem: '#date1' });
            //指定入院日期,外部事件调用
            lay('#date2').on('click',
                function () {
                    laydate.render({
                        elem: '#date2',
                        format: 'yyyy-MM-dd HH:mm:ss',
                        show: true,
                        closeStop: '#date2'
                    });
                });
            baseInfo.PageFunction.FunctionName = "BirthHospital";
            //插件检查
            var verification = DetectActiveX();
            if (verification === false) {
                return false;
            }
            //病人信息
            var inpatientInfoData = null;
            //获取住院病人信息
            function getHospitalizationInpatientInfo() {
                var params = {
                    "TransKey": $("#transkey").val() /*医保交易码*/,
                    "BusinessId": $("#bid").val() /*当前住院记录的业务ID*/,
                    "UserId": $("#empid").val() /*授权操作人的ID*/
                }
                params["timestamp"] = (new Date()).valueOf();
                //获取病人信息
                $.ajax({
                    url: host + '/GetInpatientInfo',
                    data: params,
                    dataType: "json",
                    type: 'post',
                    success: function (data) {
                        if (data.Success === false) {
                            var errData = data.Message;
                            layer.alert(errData, { skin: 'layui-layer-molv', icon: 5, title: '错误提示' });
                            //样式类名:墨绿深蓝风
                        } else {
                            inpatientInfoData = data;
                            var idCardNo = data.Data.IdCardNo;
                            if (baseInfo.PageFunction.IsSuspend !==1) {
                                buttonStatus("queryData", true);
                            }
                           
                            baseInfo.HospitalInfo.IdentityMark = data.Data.IdCardNo;
                          
                            //layer.msg('费用上传成功', { icon: 6, shade: 0.1, skin: 'layui-layer-molv' });
                        }
                    },
                    complete: function () {
                        form.render();
                    }
                });
            }
            //获取住院病人信息
            getHospitalizationInpatientInfo();
            //获取医院基本信息回调方法
            window.getHospitalInfoBack = function () { };
            getHospitalInfo(getHospitalInfoBack);
            //根据医疗类别进行初始化
            function setMedicalCategoryIni(num) {
                var medicalCategory = $("#MedicalCategory");
                medicalCategory.empty();
                var optionHtml = " <option value=''>请选择医疗类别</option>";
                //居民
                if (num === "342") {
                    optionHtml += "<option value='71'>71-顺产</option>";
                    optionHtml += "<option value='72'>72-剖宫产</option>";
                    optionHtml += "<option value='41'>41-病理剖宫产</option>";
                    $("#SpouseIdCardNoDiv").hide();
                    $("#SpouseNameDiv").hide();
                  
                }
                //职工
                if (num === "310") {
                    optionHtml += "<option value='71'>71-顺产</option>";
                    optionHtml += "<option value='72'>72-剖宫产</option>";
                 
                    $("#HouseholdNatureDiv").hide();
                }
               
                medicalCategory.append(optionHtml);

            }
            //form数据回显:数据回显到Form表单主体部分
            var jsonToForm = function (jsonData, formFilter) {
                //初始化
                setMedicalCategoryIni(jsonData.InsuranceType);
                //给表单赋值
                form.val(formFilter,
                    {
                        "AdmissionDate": inpatientInfoData.Data.AdmissionDate,
                        "HospitalizationNo": inpatientInfoData.Data.HospitalizationNo,
                        "PatientName": jsonData.PatientName,
                        "IdCardNo": jsonData.IdCardNo,
                        "PatientSex": jsonData.PatientSex,
                        "InDepartmentName": inpatientInfoData.Data.InDepartmentName,
                        "InDepartmentId": inpatientInfoData.Data.InDepartmentId,
                        "AdmissionDiagnosticDoctor": inpatientInfoData.Data.AdmissionDiagnosticDoctor,
                        "AdmissionBed": inpatientInfoData.Data.AdmissionBed,
                        "AdmissionWard": inpatientInfoData.Data.AdmissionWard,
                        "AdmissionOperator": inpatientInfoData.Data.AdmissionOperator,
                        "PersonalCoding": jsonData.PersonalCoding,
                        "InsuranceType": jsonData.InsuranceType,
                        "PersonnelClassification": jsonData.PersonnelClassification
                    });
              
                form.render();
            }
           
            //
            //诊断数据表格实例化
            var layTableId = "dataTableId";
            var tableIns = table.render({
                elem: '#dataTable',
                id: layTableId,
                page: false,
                cols: [
                    [
                        { title: '序号', type: 'numbers', width: 80 },
                        { field: 'DiseaseCoding', title: '基层疾病编码', width: 280 },
                        { field: 'DiseaseName', title: '基层疾病名称', width: 280 },
                        { field: 'ProjectCode', title: '医保疾病编码', width: 280 },
                        {
                            field: 'IsMainDiagnosis',
                            title: '主诊',
                            width: 120,
                            event: 'diagnosis',
                            templet: function (d) {
                                var html = [
                                    '<input type="checkbox" name="IsMainDiagnosis" lay-skin="switch" lay-text="是|否"'
                                ];
                                html.push(d.IsMainDiagnosis === true ? 'checked' : '');
                                html.push('/>');
                                return html.join('');
                            }

                        }
                        ,{
                            title: '操作',
                            fixed: 'right',
                            templet: function (d) {
                                return '<a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="del" lay-id="' +
                                    d.ProjectCode +
                                    '"><i class="layui-icon layui-icon-delete"></i>移除</a>';
                            }
                        }
                    ]
                ]
            });
           
           
            //初始化病人基本信息
            function iniInpatientInfo() {
                baseInfoNew = baseInfo;
                jsonToForm(baseInfo.Inpatient, "LAY-form-render");
                //加载诊断默认数据
                tableIns.reload({
                    data: inpatientInfoData.Data.DiagnosisList
                });
                buttonStatus("BirthRegister", true);
            }
            //获取医保病人信息
            window.getInpatientInfoBack = function () {
                iniInpatientInfo();
            }
            //入参初始化
            function getBirthHospitalizationRegisterParamIni(data)
            {
                var field = data.field;
                //医疗类别
                var medicalCategory = $("#MedicalCategory").val();
                if (medicalCategory === "" ) {
                    msgError('医疗类别不能为空!!!!');
                    return false;
                }
                var insuranceType = $("#InsuranceType").val();
              
                //职工
                if (insuranceType === "342") {
                    //户口性质
                    var householdNature = $("#HouseholdNature").val();
                    if (householdNature === "" ) {
                        msgError('户口性质不能为空!!!!');
                        return false;
                    }
                }
                //胎儿数
                var fetusNumber = $("#FetusNumber").val();
                if (fetusNumber === "" || fetusNumber === undefined) {
                    msgError('胎儿数不能为空!!!!');
                    return false;
                }
                if (fetusNumber <= 0) {
                    msgError('胎儿数必须大于0!!!!');
                    return false;
                }
                field.BusinessId = field.BusinessId;
                //医保交易码
                field.TransKey = $("#transkey").val();
                //授权操作人的ID
                field.UserId = $("#empid").val();
                //诊断列表
                var dataTable1 = table.cache[layTableId];
                var diagnosisList = [];
                //排除空值
                $.each(dataTable1, function (k, v) {
                    if (v.DiseaseCoding !== undefined) {
                        diagnosisList.push(v);
                    }
                });
                //诊断列表 
                field.DiagnosisList = diagnosisList;
                field["IdentityMark"] = baseInfo.HospitalInfo.IdentityMark;
                field["AfferentSign"] = baseInfo.HospitalInfo.AfferentSign;
                //if ($("#InsuranceType").val() === "310") {
                //    field["AfferentSign"] = "3";
                //    field.AfferentSign = "3";
                //}

                return field;
            }
            //获取医保入院登记参数
            function getBirthHospitalizationRegisterParam(paramData) {
                var fieldParam = getBirthHospitalizationRegisterParamIni(paramData);
                if (fieldParam === false) return false;
                buttonStatus("BirthRegister", false);
                $.ajax({
                    type: 'POST',
                    url: hostNew + '/GetBirthHospitalizationRegisterParam',
                    async: false,
                    data: JSON.stringify(fieldParam),
                    dataType: "json",
                    contentType: 'application/json',
                    success: function (data) {
                        if (data.Success === false) {
                            var errData = data.Message;
                            msgError(errData);
                            //样式类名:墨绿深蓝风
                        } else {
                            var activeX = document.getElementById("CSharpActiveX");
                            //获取医保类型
                            var insuranceTypeValue = $("#InsuranceType").val();
                            var activeData;
                            var activeJsonData;
                            if (insuranceTypeValue === "342") { //居民入生育院登记
                                activeData = activeX.HospitalizationMethods(data.Data, JSON.stringify(baseInfo.HospitalInfo), "HospitalizationRegister");
                                activeJsonData = JSON.parse(activeData);
                                if (activeJsonData.Success === false) {
                                    msgError(activeJsonData.Message);
                                } else {
                                    fieldParam["SettlementJson"] = activeJsonData.Data;
                                    birthHospitalizationRegister(fieldParam);
                                }
                            }
                            if (insuranceTypeValue === "310") {
                                //职工入生育院登记
                                activeData = activeX.HospitalizationMethods(data.Data, JSON.stringify(baseInfo.HospitalInfo), "WorkerBirthHospitalizationRegister");
                                activeJsonData = JSON.parse(activeData);
                                if (activeJsonData.Success === false) {
                                    msgError(activeJsonData.Message);
                                } else {
                                    fieldParam["SettlementJson"] = activeJsonData.Data;
                                    birthHospitalizationRegister(fieldParam);
                                }
                            }



                        }
                    }
                });

                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            }
            //住院登记
            function birthHospitalizationRegister(parameters) {
               
               
                $.ajax({
                    type: 'POST',
                    url: hostNew + '/BirthHospitalizationRegister',
                    async: false,
                    data: JSON.stringify(parameters),
                    dataType: "json",
                    contentType: 'application/json',
                    success: function (data) {
                        if (data.Success === false) {
                            var errData = data.Message;
                            msgError(errData);
                            return false;
                        } else {
                            msgSuccess('登记成功');
                            buttonStatus("BirthRegister", false);
                        }
                      
                    }
                });
            }
            $('#queryData').on('click', function () {
            
                queryData(getInpatientInfoBack);
                buttonStatus("queryData", false);
            });
            //登记
            form.on('submit(BirthRegister)',
                function (data) {
                    if (baseInfoNew.Inpatient.InsuranceType === "342")
                    {
                        var auditData = userInfoAudit(inpatientInfoData.Data.PatientName,
                            inpatientInfoData.Data.IdCardNo,
                            baseInfoNew.Inpatient.PatientName,
                            baseInfoNew.Inpatient.IdCardNo);
                        if (auditData === true)
                        {
                            getBirthHospitalizationRegisterParam(data);
                        }
                    }
                    else
                    {
                        getBirthHospitalizationRegisterParam(data);
                    }
                   
                    return false; 
                });
            //------添加医保诊断
            var tableSelect = layui.tableSelect;
            tableSelect.render({
                elem: '#DiagnosisSearchData',
                checkedKey: 'id',
                searchKey: 'Search',//搜索输入框的name值 默认keyword
                searchPlaceholder: '名称/编码',	//搜索输入框的提示文字 默认关键词搜索
                table: {
                    url: host + '/MedicalInsuranceQueryIcd10',
                    parseData: function (result) {
                        return {
                            "code": result.Code,
                            "msg": result.Message,
                            "data": result.Data.data,
                            "count": result.Data.count
                        };
                    },
                    cols: [
                        [
                            { type: 'radio' },
                            { field: 'DiseaseCoding', title: '医保疾病编码' },
                            { field: 'DiseaseName', title: '医保疾病名称' },
                            { field: 'ProjectCode', title: '医保疾病编码', hide: true }

                        ]
                    ]
                },
                done: function (elem, data) {

                    //获取table缓存
                    var oldData = table.cache[layTableId];
                    var oldDataTable = new Array;
                    layui.each(oldData,
                        function (index, item) {
                            //排除空值
                            if (item.DiseaseCoding !== undefined) {
                                //新增诊断编码
                                var addDDiseaseCoding = data.data[0].DiseaseCoding;
                                //诊断去重
                                if (item.DiseaseCoding !== addDDiseaseCoding) {
                                    var itemRow = {
                                        DiseaseName: item.DiseaseName,
                                        DiseaseCoding: item.DiseaseCoding,
                                        IsMainDiagnosis: item.IsMainDiagnosis,
                                        ProjectCode: item.DiseaseCoding

                                    };
                                    oldDataTable.push(itemRow);

                                }
                            }
                        });

                    var newRow = {
                        DiseaseName: data.data[0].DiseaseName,
                        DiseaseCoding: data.data[0].DiseaseCoding,
                        ProjectCode: data.data[0].DiseaseCoding,
                        IsMainDiagnosis: false

                    };
                    //添加选中后的诊断
                    oldDataTable.push(newRow);

                    //更新table
                    tableIns.reload({
                        data: oldDataTable
                    });



                }
            });
            //注册按钮事件
            $('.layui-btn[data-type]').on('click',
                function () {
                    var type = $(this).data('type');
                    activeByType(type);
                });
            //定义事件集合
            var active = {
                updateRow: function (obj) {
                    var oldData = table.cache[layTableId];
                    console.log(oldData);
                    for (var i = 0, row; i < oldData.length; i++) {
                        row = oldData[i];
                        if (row.DiseaseCoding === obj.DiseaseCoding) {
                            $.extend(oldData[i], obj);
                            return;
                        }
                    }
                    tableIns.reload({
                        data: oldData
                    });
                },
                removeEmptyTableCache: function () {
                    var oldData = table.cache[layTableId];
                    for (var i = 0, row; i < oldData.length; i++) {
                        row = oldData[i];
                        if (!row || !row.Id) {
                            oldData.splice(i, 1); //删除一项
                        }
                        continue;
                    }
                    tableIns.reload({
                        data: oldData
                    });
                }
            };
            //激活事件
            var activeByType = function (type, arg) {
                if (arguments.length === 2) {
                    active[type] ? active[type].call(this, arg) : '';
                } else {
                    active[type] ? active[type].call(this) : '';
                }
            }
            //监听工具条
            table.on('tool(dataTable)',
                function (obj) {
                    var data = obj.data, event = obj.event, tr = obj.tr; //获得当前行 tr 的DOM对象;
                    switch (event) {
                        case "diagnosis":
