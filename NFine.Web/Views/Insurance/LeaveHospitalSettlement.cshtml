@{
    Layout = "~/Views/Shared/_Base.cshtml";
    ViewBag.Title = "住院结算";
}
<link href="~/Content/js/layui/css/modules/layuiAutocomplete.css" rel="stylesheet" />
<script src="~/script/BenDingComm.js"></script>
<style>
    .layui-card-header.layuibd-card-header-auto {
        padding-top: 15px;
        padding-bottom: 15px;
        height: auto;
    }

    .layuibd-card-header-auto i.layuibd-button-btn {
        position: relative;
        right: 0;
        top: 0;
        vertical-align: middle
    }
</style>
<div class="layui-fluid" >
    <div class="layui-card">
        <form class="layui-form" id="LAY-form" lay-filter="LAY-form-render">
           
            <input type="hidden" id="IsBirthHospital" placeholder="医保交易id" />
            @{Html.RenderPartial("_CSharpActiveX");}
            <div class="layui-card-header layuibd-card-header-auto">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
                    <legend>病人信息</legend>
                </fieldset>
                <!--病人信息-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">住院编号</label>
                        <div class="layui-input-inline">
                            <input type="text" name="HospitalizationNo" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">身份证号</label>
                        <div class="layui-input-inline">
                            <input type="text" name="IdCardNo" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">患者姓名</label>
                        <div class="layui-input-inline">
                            <input type="text" name="PatientName" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">入院日期</label>
                        <div class="layui-input-inline">
                            <input type="text" name="AdmissionDate" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">出院日期</label>
                        <div class="layui-input-inline">
                            <input type="text" name="LeaveHospitalDate" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">出院状态</label>
                        <div class="layui-input-inline">
                            <select id="LeaveHospitalInpatientState" name="LeaveHospitalInpatientState">
                                <option value="">请选择状态</option>
                                <option value="1">1-康复</option>
                                <option value="2">2-转院</option>
                                <option value="3">3-死亡</option>
                                <option value="4">4-其他</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">险种类型</label>
                        <div class="layui-input-inline">
                            <select id="InsuranceType" name="InsuranceType" disabled>
                                <option value="310">城镇职工</option>
                                <option value="342">城乡居民</option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">住院科室</label>
                        <div class="layui-input-inline">
                            <input type="text" name="DepartmentName" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">费用合计</label>
                        <div class="layui-input-inline">
                            <input type="text" id="HospitalizationTotalCost" name="HospitalizationTotalCost" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">现金支付</label>
                        <div class="layui-input-inline">
                            <input type="text" id="CashPayment" name="CashPayment" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    @*<div class="layui-inline">
                <label class="layui-form-label">报销金额</label>
                <div class="layui-input-inline">
                    <input type="text" id="ReimbursementExpenses" name="ReimbursementExpenses" autocomplete="off" disabled class="layui-input layui-disabled">
                </div>
            </div>*@
                    <div class="layui-inline" id="MedicalCategoryDiv">
                        <label class="layui-form-label">医疗类别</label>
                        <div class="layui-input-inline">
                            <select name="MedicalCategory" id="MedicalCategory">
                                <option value="">请选择医疗类别</option>
                                <option value="71">71-顺产</option>
                                <option value="72">72-剖宫产</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline" id="FetusNumberDiv">
                        <label class="layui-form-label">胎儿数</label>
                        <div class="layui-input-inline">
                            <input type="text" id="FetusNumber" name="FetusNumber" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-inline" id="AccountPaymentDiv">
                        <label class="layui-form-label">下账金额</label>
                        <div class="layui-input-inline">
                            <input type="text" id="AccountPayment" name="AccountPayment" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">诊断医生</label>
                        <div class="layui-input-inline">
                            <input type="text" name="AdmissionDiagnosticDoctor" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">经办人</label>
                        <div class="layui-input-inline">
                            <input type="text" name="Operator" autocomplete="off" disabled class="layui-input layui-disabled">
                        </div>
                    </div>
                    @*<div class="layui-inline">
                <label class="layui-form-label">社保卡密码</label>
                <div class="layui-input-inline">
                    <input type="text" id="CardPwd" name="CardPwd" autocomplete="off" disabled class="layui-input layui-disabled">
                </div>
            </div>*@
                </div>

                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>出院诊断</legend>
                </fieldset>
                <!--搜索部分-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label" style="width: 100px;">补加医保诊断</label>
                        <div class="layui-input-inline" style="width: 280px;">
                            <input type="text" name="DiagnosisSearchData" id="DiagnosisSearchData" class="layui-input layui-disabled">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item" style="text-align: center; margin-top: 20px;">
                    <button type="button" Id="Settlement" disabled="disabled" class="layui-btn layui-btn-disabled layui-btn-radius">结算</button>
                    @*<button type="button" Id="PayCard" class="layui-btn layui-btn-disabled layui-btn-radius">刷卡</button>*@
                </div>
            </div>
            <table class="layui-table" id="dataTable" lay-size="sm" lay-filter="dataTable"></table>
            <div class="layui-card-body" lay-size="sm">
                <fieldset id="SettleData" class="layui-elem-field layui-field-title" style="margin-top: 10px;">
                    <legend>医保结算信息</legend>
                </fieldset>
            </div>

        </form>
    </div>
</div>
<script>
    layui.config({
        base: '/Content/js/layui/plugin/'
    }).extend({
        autocomplete: 'layAutoComplete'
        });
    var iniJs;
    var iniMsg;
    layui.use(['form', 'laypage', 'layer', 'table', 'element', 'autocomplete'], function () {
        var $ = layui.$,
            element = layui.element,
            form = layui.form,
            layer = layui.layer,
            table = layui.table;
        //险种类型
        var insuranceType = "0";
      
        //是否生育入院登记
        //初始化公共页面
        iniJs = $;
        iniMsg = layer;
        $("#FetusNumberDiv").hide();
        $("#MedicalCategoryDiv").hide();
        $("#AccountPaymentDiv").hide();
       
        //form数据回显:数据回显到Form表单主体部分
        var jsonToForm = function (jsonData, formFilter) {
            //给表单赋值
            form.val(formFilter,
                {
                    "AdmissionDate": jsonData.AdmissionDate,
                    "LeaveHospitalDate": jsonData.LeaveHospitalDate,
                    "HospitalizationNo": jsonData.HospitalizationNo,
                    "PatientName": jsonData.PatientName,
                    "IdCardNo": jsonData.IdCardNo,
                    "DepartmentName": jsonData.InDepartmentName,
                    "AdmissionDiagnosticDoctor": jsonData.AdmissionDiagnosticDoctor,
                    "HospitalizationTotalCost": jsonData.HospitalizationTotalCost,
                    "Operator": jsonData.Operator,
                    "InsuranceType": jsonData.InsuranceType
                });
            form.render();
        }
        //诊断数据表格实例化
        //----
        //诊断数据表格实例化
        var layTableId = "dataTableId";
        var tableIns = table.render({
            elem: '#dataTable',
            id: layTableId,
            page: false,
            cols: [
                [
                    { title: '序号', type: 'numbers', width: 80 },
                    { field: 'DiseaseCoding', title: '基层疾病编码', width: 280 },
                    { field: 'DiseaseName', title: '基层疾病名称', width: 280 },
                    { field: 'ProjectCode', title: '医保疾病编码', width: 280 },
                    {
                        field: 'IsMainDiagnosis',
                        title: '主诊',
                        width: 120,
                        event: 'diagnosis',
                        templet: function (d) {
                            var html = [
                                '<input type="checkbox" name="IsMainDiagnosis" lay-skin="switch" lay-text="是|否"'
                            ];
                            html.push(d.IsMainDiagnosis === true ? 'checked' : '');
                            html.push('/>');
                            return html.join('');
                        }
                    }
                    ,{
                        title: '操作',
                        fixed: 'right',
                        templet: function (d) {
                            return '<a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="del" lay-id="' +
                                d.ProjectCode +
                                '"><i class="layui-icon layui-icon-delete"></i>移除</a>';
                        }
                    }
                ]
            ]
        });
       
        //---------
        //插件检查
        var verification = DetectActiveX();
        if (verification === false) {
            return false;
        }
        //获取医院基本信息回调方法
        window.getHospitalInfoBack = function () { };
     
        getHospitalInfo(getHospitalInfoBack);
        var params = {
            "TransKey": $("#transkey").val() /*医保交易码*/,
            "BusinessId": $("#bid").val() /*当前住院记录的业务ID*/,
            "UserId": $("#empid").val() /*授权操作人的ID*/
        }
        params["timestamp"] = (new Date()).valueOf();
        $.ajax({
            type: 'get',
            url: host + '/GetHisHospitalizationSettlement',
            data: params,
            dataType: "json",
            async: false,
            success: function (data) {

                if (data.Success === false) {
                    var errData = data.Message;
                    layer.alert(errData, { icon: 5,title: '错误提示',skin: 'layui-layer-molv'  });
                } else {
                   
                   
                    insuranceType = data.Data.InsuranceType;
                    baseInfo.HospitalInfo.IdentityMark = data.Data.IdentityMark;
                    baseInfo.HospitalInfo.AfferentSign = data.Data.AfferentSign;
                    if (data.Data.IsBirthHospital === 1) {
                        if (insuranceType === "310") {
                            $("#FetusNumberDiv").show();
                            $("#MedicalCategoryDiv").show();
                            $("#AccountPaymentDiv").show();
                        }

                    }
                    jsonToForm(data.Data, "LAY-form-render");

                    $("#IsBirthHospital").val(data.Data.IsBirthHospital);
                 
                    //加载诊断默认数据
                    tableIns.reload({
                        data: data.Data.DiagnosisList
                    });
                    buttonStatus("Settlement", true);
                    form.render();
                }
            }
           
        });
        function getHospitalizationSettlementParamIni() {
        
            var leaveHospitalInpatientState = $("#LeaveHospitalInpatientState").val();
            if (leaveHospitalInpatientState === "undefined" || leaveHospitalInpatientState === "") {
                msgError("病人出院状态不能为空!!!");
                return false;
            }
            //诊断列表
            var dataTable1 = table.cache[layTableId];
            var diagnosisList = [];
            //排除空值
            $.each(dataTable1, function (k, v) {
                if (v.DiseaseCoding !== undefined) {
                    diagnosisList.push(v);
                }
            });

            var settlementParam =
            {
                "TransKey": $("#transkey").val() /*医保交易码*/,
                "BusinessId": $("#bid").val() /*当前住院记录的业务ID*/,
                "UserId": $("#empid").val() /*授权操作人的ID*/,
                "LeaveHospitalInpatientState": leaveHospitalInpatientState, /*授权操作人的ID*/
                "DiagnosisList": diagnosisList
            };
            var isBirthHospital = $("#IsBirthHospital").val();

            if (isBirthHospital === "1") {
                //医疗类别
                var medicalCategory = $("#MedicalCategory").val();
                if (medicalCategory === "" || medicalCategory === undefined) {
                    msgError("医疗类别不能为空!!!");

                    return false;
                }
                //胎儿数
                var fetusNumber = $("#FetusNumber").val();
                if (fetusNumber === "" || fetusNumber === undefined) {
                    msgError("胎儿数不能为空!!!");
                    return false;
                }
                if (fetusNumber <= 0) {
                    msgError("胎儿数必须大于0!!!");
                    return false;
                }
                settlementParam["timestamp"] = (new Date()).valueOf();
                settlementParam["MedicalCategory"] = $("#MedicalCategory").val();
                settlementParam["FetusNumber"] = fetusNumber;
                settlementParam["AccountPayment"] = $("#AccountPayment").val();
            }

            return settlementParam;
        }
        //结算
        function hospitalizationSettlement(parameters) {

           
            $.ajax({
                type: 'POST',
                url: hostNew + '/LeaveHospitalSettlement',
                async: false,
                data: JSON.stringify(parameters),
                dataType: "json",
                contentType: 'application/json',

                success: function (data) {

                    if (data.Success === false) {
                        var errData = data.Message;
                        //样式类名:墨绿深蓝风
                        layer.alert(errData, { skin: 'layui-layer-molv', icon: 5, title: '错误提示' });

                    } else {
                       
                        if (data.Data.PayMsg !== null) {
                            settlementData(data.Data.PayMsg);
                        }
                        $('#ReimbursementExpenses').val(data.Data.ReimbursementExpenses);
                        $('#CashPayment').val(data.Data.CashPayment);
                        $('#HospitalizationTotalCost').val(data.Data.TotalAmount);
                        buttonStatus("Settlement", false);
                        layer.msg('住院结算成功', { icon: 6, shade: 0.1, skin: 'layui-layer-molv' });
                    
                    }
                }

            });
        }
        //获取医保结算参数
        function getHospitalizationSettlementParam() {
           
            var settlementParam = getHospitalizationSettlementParamIni();
            if (settlementParam === false) return false;
            buttonStatus("Settlement", false);
            $.ajax({
                type: 'POST',
                url: hostNew + '/GetLeaveHospitalSettlementParam',
                async: false,
                data: JSON.stringify(settlementParam),
                dataType: "json",
                contentType: 'application/json',
                success: function (data) {
                 
                    if (data.Success === false) {
                        var errData = data.Message;
                        msgError(errData);
                        //样式类名:墨绿深蓝风
                    } else {
                        
                        var activeX = document.getElementById("CSharpActiveX");
                        //获取医保类型
                        var activeData;
                        var activeJsonData;
                        var isBirthHospital = $("#IsBirthHospital").val();
                        if (insuranceType === "342") {
                            //居民结算
                            activeData = activeX.HospitalizationMethods(data.Data, JSON.stringify(baseInfo.HospitalInfo), "LeaveHospitalSettlement");
                            activeJsonData = JSON.parse(activeData);
                            if (activeJsonData.Success === false) {
                                msgError(activeJsonData.Message);
                            } else {
                                settlementParam["SettlementJson"] = activeJsonData.Data;
                                settlementParam["InsuranceBalance"] = activeJsonData.OtherInfo;
                                hospitalizationSettlement(settlementParam);
                            }
                        }
                        if (insuranceType === "310") {
                            //职工生育结算
                            if (isBirthHospital === "1") {
                                activeData = activeX.HospitalizationMethods(data.Data, JSON.stringify(baseInfo.HospitalInfo), "WorkerBirthSettlement");
                               
                            }
                            else//职工结算
                            {
                                activeData = activeX.HospitalizationMethods(data.Data, JSON.stringify(baseInfo.HospitalInfo), "WorkerHospitalizationSettlement");
                            }

                            activeJsonData = JSON.parse(activeData);
                            if (activeJsonData.Success === false) {
                                msgError(activeJsonData.Message);
                            } else {
                                settlementParam["SettlementJson"] = activeJsonData.Data;
                                settlementParam["InsuranceBalance"] = activeJsonData.OtherInfo;
                                hospitalizationSettlement(settlementParam);

                            }
                        }



                    }
                }
            });

            return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
        }
     
        $('#Settlement').on('click', function () {
            layer.msg('正在操作中请稍等...');
            buttonStatus("Settlement", false);
            getHospitalizationSettlementParam();
           
        });
      
        //------添加医保诊断
        var tableSelect = layui.tableSelect;
        tableSelect.render({
            elem: '#DiagnosisSearchData',
            checkedKey: 'id',
            searchKey: 'Search',//搜索输入框的name值 默认keyword
            searchPlaceholder: '名称/编码',	//搜索输入框的提示文字 默认关键词搜索
            table: {
                url: host + '/MedicalInsuranceQueryIcd10',
                parseData: function (result) {
                    return {
                        "code": result.Code,
                        "msg": result.Message,
                        "data": result.Data.data,
                        "count": result.Data.count
                    };
                },
                cols: [
                    [
                        { type: 'radio' },
                        { field: 'DiseaseCoding', title: '医保疾病编码' },
                        { field: 'DiseaseName', title: '医保疾病名称' },
                        { field: 'ProjectCode', title: '医保疾病编码', hide: true }

                    ]
                ]
            },
            done: function (elem, data) {

                //获取table缓存
                var oldData = table.cache[layTableId];
                var oldDataTable = new Array;
                layui.each(oldData,
                    function (index, item) {
                        //排除空值
                        if (item.DiseaseCoding !== undefined) {
                            //新增诊断编码
                            var addDDiseaseCoding = data.data[0].DiseaseCoding;
                            //诊断去重
                            if (item.DiseaseCoding !== addDDiseaseCoding) {
                                var itemRow = {
                                    DiseaseName: item.DiseaseName,
                                    DiseaseCoding: item.DiseaseCoding,
                                    IsMainDiagnosis: item.IsMainDiagnosis,
                                    ProjectCode: item.DiseaseCoding

                                };
                                oldDataTable.push(itemRow);

                            }
                        }
                    });

                var newRow = {
                    DiseaseName: data.data[0].DiseaseName,
                    DiseaseCoding: data.data[0].DiseaseCoding,
                    ProjectCode: data.data[0].DiseaseCoding,
                    IsMainDiagnosis: false

                };
                //添加选中后的诊断
                oldDataTable.push(newRow);

                //更新table
                tableIns.reload({
                    data: oldDataTable
                });



            }
        });
        //注册按钮事件
        $('.layui-btn[data-type]').on('click',
            function () {
                var type = $(this).data('type');
                activeByType(type);
            });
        //定义事件集合
        var active = {
            updateRow: function (obj) {
                var oldData = table.cache[layTableId];
                console.log(oldData);
                for (var i = 0, row; i < oldData.length; i++) {
                    row = oldData[i];
                    if (row.DiseaseCoding === obj.DiseaseCoding) {
                        $.extend(oldData[i], obj);
                        return;
                    }
                }
                tableIns.reload({
                    data: oldData
                });
            },
            removeEmptyTableCache: function () {
                var oldData = table.cache[layTableId];
                for (var i = 0, row; i < oldData.length; i++) {
                    row = oldData[i];
                    if (!row || !row.Id) {
                        oldData.splice(i, 1); //删除一项
                    }
                    continue;
                }
                tableIns.reload({
                    data: oldData
                });
            }
        };
        //激活事件
        var activeByType = function (type, arg) {
            if (arguments.length === 2) {
                active[type] ? active[type].call(this, arg) : '';
            } else {
                active[type] ? active[type].call(this) : '';
            }
        }
        //监听工具条
        table.on('tool(dataTable)',
            function (obj) {
                var data = obj.data, event = obj.event, tr = obj.tr; //获得当前行 tr 的DOM对象;
                switch (event) {
                    case "diagnosis":
                        var stateVal = tr.find("input[name='IsMainDiagnosis']").prop('checked') ? true : false;
                        $.extend(obj.data, { 'IsMainDiagnosis': stateVal });
                        activeByType('updateRow', obj.data); //更新行记录对象
                        break;
                    case "del":
                        layer.confirm('真的删除行么？',
                            function (index) {
                                obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                                layer.close(index);
                                //activeByType('removeEmptyTableCache');
                            });
                        break;
                }
            });
            //---
      

    });


</script>
