                    <div class="layui-inline">
                        <label class="layui-form-label">医疗类别</label>
                        <div class="layui-input-inline">
                            <select id="MedicalCategory" name="MedicalCategory" lay-filter="MedicalCategoryType">
                                <option value=''>请选择医疗类别</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">胎儿数</label>
                        <div class="layui-input-inline">
                            <input type="text" id="FetusNumber" name="FetusNumber" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-inline" id="HouseholdNatureDiv">
                        <label class="layui-form-label">户口性质</label>
                        <div class="layui-input-inline">
                            <select name="HouseholdNature" id="HouseholdNature">
                                <option value="">请选择户口性质</option>
                                <option value="10">城镇户口</option>
                                <option value="20">农业户口</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline" id="SpouseIdCardNoDiv">
                        <label class="layui-form-label">配偶身份证</label>
                        <div class="layui-input-inline">
                            <input type="text" name="SpouseIdCardNo" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-inline" id="SpouseNameDiv">
                        <label class="layui-form-label">配偶姓名</label>
                        <div class="layui-input-inline">
                            <input type="text" name="SpouseName" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <!--诊断部分-->
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>诊断列表</legend>
                </fieldset>
                <!--搜索部分-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label" style="width: 100px;">补加医保诊断</label>
                        <div class="layui-input-inline" style="width: 280px;">
                            <input type="text" name="DiagnosisSearchData" id="DiagnosisSearchData" class="layui-input layui-disabled">
                        </div>
                    </div>
                </div>
                <!--诊断列表-->
                <table class="layui-table" id="dataTable" lay-size="sm" lay-filter="dataTable"></table>
                <div class="layui-form-item" style="text-align: center;margin-top: 20px;">
                    <button disabled class="layui-btn layui-btn-disabled layui-btn-radius" type="button" id="queryData">
                        查询
                    </button>
                    <button type="submit" id="BirthRegister" disabled class="layui-btn layui-btn-disabled layui-btn-radius" lay-submit lay-filter="BirthRegister">登记</button>
                </div>
